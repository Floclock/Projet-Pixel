{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th> Votes </th>
<p><a id="vote-button" data-id="{{ comment.id }}" href="{{ path('comment_vote', {'id': comment.id}) }}" class="btn btn-success">Voter +1 <span class="badge badge-light ml-2">{{ comment.votes }}</span></a></p>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">Revenir a la liste</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Editer</a>

    {{ include('backend/comment/_delete_form.html.twig') }}
{% endblock %}
